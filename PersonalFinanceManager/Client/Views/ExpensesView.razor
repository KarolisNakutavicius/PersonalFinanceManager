@page "/expenses"
@attribute [Authorize]
@inherits ExpensesViewComponent
@using ChartJs.Blazor;

<p>Total expenses this month : @ViewModel.CurrentAmount</p>

<input type="number" @bind="ViewModel.ValueToAdd" />

<button class="btn btn-primary" @onclick="ViewModel.AddExpense">Add</button>

<Chart Config="ViewModel.Config"></Chart>


