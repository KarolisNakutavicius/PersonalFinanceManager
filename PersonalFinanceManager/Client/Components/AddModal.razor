<div class="modal @ModalClass" tabindex="-1" role="dialog" style="display:@ModalDisplay">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="container">
                    <div class="row">
                        <h5 class="modal-title">Add</h5>
                            <select @bind="Statement" class="col-4 ml-3">
                                @foreach (var type in Enum.GetValues(typeof(StatementType)))
                                {
                                    <option value="@type">@type.ToString()</option>
                                }
                            </select>
                    </div>
                </div>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>

            <div class="modal-body">
                <div class="container" style="padding: 20px;">
                    <div class="row">
                        <label class="col-3">Amount :</label>
                        <input class="col" type="number" min="0.00" step="0.05" placeholder="Amount">
                    </div>
                    <div class="row mt-3">
                        <label class="col-3">Category :</label>
                        <input class="col" type="text" placeholder="Category">
                    </div>
                    <div class="row mt-3">
                        <label class="col-3">Date :</label>
                        <input class="col" type="date" value="2020-07-22" />
                    </div>
                    <div class="row mt-3">
                        <label class="col-3">Color :</label>
                        <input class="col" type="color" />
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick ="TryAdd">Add</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="Close">Close</button>
            </div>

        </div>
    </div>
</div>


@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}


@code {

    public string ModalDisplay = "none;";
    public string ModalClass = "";
    public bool ShowBackdrop = false;

    [Parameter]
    public StatementType Statement { get; set; }
    
    public void Open()
    {
        ModalDisplay = "block;";
        ModalClass = "Show";
        ShowBackdrop = true;
        StateHasChanged();
    }

    public void Close()
    {
        ModalDisplay = "none";
        ModalClass = "";
        ShowBackdrop = false;
        StateHasChanged();
    }

    private void TryAdd()
    {

    }
}